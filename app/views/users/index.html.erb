<p id="notice"><%= notice %></p>

<h1 class="text-center">Users</h1>

<table>
  <thead>
    <tr>
      <th>Full name:</th>
      <th>Email:</th>
      <th>Number of books:</th>
      <th>Author:</th>
      <th>Title:</th>
      <th>Brief prologue:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.number_of_books %></td>
        <td><%= user.author %></td>
        <td><%= user.title %></td>
        <td><%= user.brief_prolong %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_book_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Continue', books_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path  %>
<%= link_to 'Add Books', new_book_path  %>
<%= link_to 'See What We Have', books_path  %>
