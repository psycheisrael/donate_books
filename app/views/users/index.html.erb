<div class="page">
  <p id="notice"><%= notice %></p>

  <h1>Donors</h1>

  <table>
    <thead>
      <tr>
        <th>Full Name:</th>
        <th>Email:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_book_path(user), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
